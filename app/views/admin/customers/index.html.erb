<h2>会員一覧</h2>

<table>

 <thead>
  <th>会員ID</th>
  <th>氏名</th>
  <th>メールアドレス</th>
  <th>ステータス</th>
 </thead>

 <tbody>
  <% @customers.each do |customer| %>
     <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.family_name, admin_customer_path(customer.id) %></th><th><%= link_to customer.first_name, admin_customer_path(customer.id) %></td>
      <td><%= customer.email %></td>
      <td><% if customer.is_deleted == false %>
      有効
      <% else %>
      退会
      <% end %></td>

     </tr>
    <% end %>
 </tbody>
 <%= paginate(@customers) %>

</table>
