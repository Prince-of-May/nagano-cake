<!--<div class="container">-->
  <div class="row">
    <div class="col">
      <h2>注文履歴一覧</h2>
      <table class="table table-hover table-bordered">
        <thead class="table-active">
          <tr class="info">

            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>          
            <td><%= order.customer.family_name %><%= order.customer.first_name %></td>
            <td><%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= order.ordering_products.sum(:quantity) %></td>
            <td><%= order.status %></td>
          </tr>
            <td><%= link_to "注文詳細", admin_order_path(order), class:"btn btn-primary" %></td>

          <% end %>
          </tbody>
      </table>
    </div>
  </div>