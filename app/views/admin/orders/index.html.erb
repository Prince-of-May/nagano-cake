
<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="my-5 text-center">注文履歴一覧</h2>
      <table class="table table-hover table-bordered">
        <thead class="thead-light">
          <tr class="info">

            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.customer.family_name %><%= order.customer.first_name %></td>
            <td><%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
             <% @ordering_amount = 0 %>
            <td><% order.ordering_products.each do |ordering_product| %>
             <% @ordering_amount += ordering_product.amount %>
             <% end %>
             <%= @ordering_amount %>
            </td>
            <td><%= order.status %></td>
          </tr>
            <td><%= link_to "注文詳細", admin_order_path(order), class:"btn btn-primary" %></td>
          <% end %>
          </tbody>
      </table>
      <%= paginate(@orders) %>
    </div>
  </div>
</div>
