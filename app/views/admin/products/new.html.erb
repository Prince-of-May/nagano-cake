<h2>商品新規登録</h2>

<%= form_with model: @product, url: admin_products_path, method: :post, local:true do |f| %>

<h4><%= f.label :商品画像 %>
<%= f.attachment_field :image, placeholder: "商品画像" %></h4>

<h4><%= f.label :商品名 %>
  <%= f.text_field :name, autofocus: true, autocomplete: "name" %></h4>

<h4><%= f.label :商品説明 %>
  <%= f.text_area :description, autofocus: true, autocomplete: "description" %></h4>

<h4><%= f.label :ジャンル %>
  <%= f.select :genre_id, [1,2], include_blank: "選択して下さい" %></h4>

<h4><%= f.label :税抜価格 %>
  <%= f.text_field :price, autofocus: true, autocomplete: "price" %>円</h4>

<h4><%= f.label :販売ステータス %>
  <%= f.select :is_active, [["販売中","false"], ["販売不可","true"]], include_blank: "--選択してください--" %></h4>

<%= f.submit "商品登録" ,class: "btn btn-primary" %>

<% end %>
