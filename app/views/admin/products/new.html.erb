<h2>商品新規登録</h2>

<%= form_with url:admin_products_path do |form| %>

<%= f.label :image %>
<%= f.attachment_field :image, placeholder: "商品画像" %>

<h4><%= f.label :商品名 %>
  <%= f.text_field :name, autofocus: true, autocomplete: "name" %></h4>

<h4><%= f.label :商品説明 %>
  <%= f.text_area :description, autofocus: true, autocomplete: "description" %></h4>

<h4><%= f.label :ジャンル %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %></h4>

<h4><%= f.label :税抜価格 %>
  <%= f.text_field :price, autofocus: true, autocomplete: "price" %></h4>

<h4><%= f.label :販売ステータス %>
  <%= f.select :is_active, ["販売中", "販売停止"] %></h4>

<%= f.submit "商品登録" ,class: "btn btn-primary"%>

<% end %>
