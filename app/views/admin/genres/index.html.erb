<h2>ジャンル追加・一覧</h2>

<%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>

<%= f.label :ジャンル名 %>
<%= f.text_field :name, autofocus: true, autocomplete: "name" %>
<%= f.submit '新規登録' %>


<% end %>
<table>
    <thead>ジャンル</thead>
        <% @genres.each do |genre| %>
        
        <tr>
        <th><%= genre.name %></th><th><%= link_to '編集する', edit_admin_genre_path(genre.id) %></th>
        </tr>
        
        <% end %>
</table>
