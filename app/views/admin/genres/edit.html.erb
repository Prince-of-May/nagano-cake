<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h2 class="my-5">ジャンル編集</h2>
      <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <% @genre.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-12 text-center">
      <div class="my-8">
        <%= form_with model:@genre, url:admin_genre_path, local:true do |f| %>
        <table class="table">
          <tbody>
            <tr>
              <th><% f.label :ジャンル名 %></th><td><%= f.text_field :name %></td><td><%= f.submit '変更を保存' %></td>
            </tr>
          </tbody>
        </table>
        <% end %>
      </div>
    </div>
  </div>