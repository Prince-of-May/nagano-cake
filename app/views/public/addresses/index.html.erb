<h4>配送先登録/一覧</h4>

<%= form_with model: @address, url: public_addresses_path, local: true do |f| %><!--%= form_with model: インスタンス変数, url,'アクションURL',local: true do |f| %-->
  <h4>郵便番号(ハイフンなし)</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <h4>宛名</h4>
  <%= f.text_field :name %>
  <%= f.submit '新規登録'%>
<% end %>

<% @addresses.each do |address| %>
<h4>郵便番号</h4>
<%= address.postal_code %>
<h4>住所</h4>
<%= address.address %>
<h4>宛名</h4>
<%= address.name %>
<% end %>
