<h2>会員情報編集</h2>
<%= form_with model: @customer, url: public_customer_path, method: :patch,  local: true do |f| %>
  <table>
    <tr>
      <th>氏名</th>
      <td><%= f.text_field :family_name %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= f.text_field :family_name_rubi %></td>
      <td><%= f.text_field :first_name_rubi %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address, size: 45 %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :phone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
  </table>
  <%= f.submit '編集内容を保存', class:"btn btn-success" %>
<% end %>
<%= link_to '退会する',public_customers_unsubscribe_path %>