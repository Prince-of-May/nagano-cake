<h4>会員情報編集</h4>
<%= form_with model: @customer, local: true do |f| %>
  <h4>氏名</h4>
  <%= f.text_field :family_name %>
  <%= f.text_field :first_name %>
  <h4>フリガナ</h4>
  <%= f.text_field :family_name_rubi %>
  <%= f.text_field :first_name_rubi %>
  <h4>住所</h4>
  <%= f.text_field :postal_code %>
  <h4>電話番号</h4>
  <%= f.text_field :phone_number %>
  <h4>メールアドレス</h4>
  <%= f.text_field :email %>
  <%= f.submit '編集内容を保存' %>
<% end %>
<%= link_to '退会する',public_customers_unsubscribe %>