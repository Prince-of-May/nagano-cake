<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table>
    <tr>
      <div class="field">
        <th><h5>名前</h5></th>
        <th><h5>(姓)</h5><%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %></th>
      </div>
      <div class="field">
        <th><h5>(名)</h5><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></th>
      </div>
    </tr>
    
      <div class="field">
        <h5>フリガナ</h5>
        <h5>(セイ)</h5>
        <%= f.text_field :family_name_rubi, autofocus: true, autocomplete: "family_name_rubi" %>
      </div>
      
      <div class="field">
        <h5>(メイ)</h5>
        <%= f.text_field :first_name_rubi, autofocus: true, autocomplete: "first_name_rubi" %>
      </div>
    
      <div class="field">
        <h5>メールアドレス</h5>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <div class="field">
        <h5>郵便番号(ハイフンなし)</h5>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
      
      <div class="field">
        <h5>住所</h5>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
      
      <div class="field">
        <h5>電話番号</h5>
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
      </div>
    
      <div class="field">
        <h5>パスワード(<%= @minimum_password_length %> 文字以上)</h5>
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <h5>パスワード(確認用)</h5>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>

</table>

<h5>既に登録済みの方</h5>
<%= link_to "こちら", new_session_path(resource_name) %><br />
