<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <table>
    <tr>
      <th>名前</th>
      <td>(姓)</td><td><%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %></th></td>
      <td>(名)</td><td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <th>(セイ)</th><td><%= f.text_field :family_name_rubi, autofocus: true, autocomplete: "family_name_rubi" %></td>
      <th>(メイ)</th><td><%= f.text_field :first_name_rubi, autofocus: true, autocomplete: "first_name_rubi" %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
    </tr>
    <tr>
      <th>パスワード(<%= @minimum_password_length %> 文字以上)</th>
      <td>
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </td>
    </tr>
    <tr>
      <th>パスワード(確認用)</th>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit "新規登録" %></td>
    </tr>
  </table>
<% end %>
<h5>既に登録済みの方</h5>
<%= link_to "こちら", new_session_path(resource_name) %><br />
