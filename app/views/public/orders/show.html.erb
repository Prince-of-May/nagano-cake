<b><h1>注文履歴詳細</h1></b>

<div class="container">
   <div class="text-center">
    <div class="row">
        <div class="col-12">
        <b><h3 class="marker_hoso">注文情報</h3></b>
            <table class="table" >
                <tr>
                    <th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                </tr>
                <tr>
                    <th>配送先</th><td><%= @order.address %></td>
                </tr>
                <tr>
                    <th>支払い方法</th><td><%= @order.payment_method %></td>
                </tr>
                <tr>
                    <th>ステータス</th><td><%= @order.status %></td>
                </tr>
            </table>
            <b><h3 class="marker_hoso">請求情報</h3></b>
            <table class="table" >
                <tr>
                    <th>商品合計</th><td><%= @order.total_payment .to_s(:delimited)%></td>
                </tr>
                <tr>
                    <th>配送料</th><td><%= @delivery_charge %></td>
                </tr>
                <tr>
                    <th>ご請求額</th><td><%= (@order.total_payment + @delivery_charge).to_s(:delimited) %></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
        <b><h3 class="marker_hoso">注文内容</h3></b>
        <table class="table" >
            <tr>
                <th>商品</th>
                <th>単価（税込）</th>
                <th>個数</th>
                <th>小計</th>
            </tr>
            <% @ordering_products.each do |ordering_product| %>
            <tr>
                <td><%= ordering_product.product.name %></td>
                <td><%= ordering_product.product.price.to_s(:delimited) %></td>
                <td><%= ordering_product.amount %></td>
                <% @sum = (ordering_product.product.price * ordering_product.amount) %>
                <td><%= @sum.to_s(:delimited) %></td>
            </tr>
            <% end %>
        </table>  
        </div>
    </div>
    </div>
</div>
