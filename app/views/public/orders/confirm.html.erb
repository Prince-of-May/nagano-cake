<h4>注文情報確認画面</h4>
    <table>
        <tr>
            <th><h4>商品名</h4></th>
            <th><h4>単価(税込)</h4></th>
            <th><h4>数量</h4></th>
            <th><h4>小計</h4></th>
            <th></th>
        </tr>
        <% @cart_items.each do |cart_item| %>
        <tr>
            <th>
            <%= attachment_image_tag cart_item.product, :image, :fill, 50, 50 %>
            <%= cart_item.product.name %>
            </th>
            <th>
            <%= tax_price(cart_item.product.price) %>
            </th>
            <th>
            <%= cart_item.amount %>
            </th>
            <th>
            <%= sub_price(cart_item) %>
            </th>
        </tr>
        <% end %>
    </table>
    <table>
        <tr>
          <th><h4>送料</h4></th>
          <th><h4>商品合計</h4></th>
          <th><h4>請求額</h4></th>
        </tr>
        <tr>
          <th><%= @delivery_charge %></th>
          <th><%= total_price(@cart_items) %></th>
          <th><%= @delivery_charge + total_price(@cart_items) %></th>
          <% @sum = @delivery_charge + total_price(@cart_items) %>
        </tr>
    </table>
    <table>
        <tr><h4>お支払い方法</h4>
            <th><%= @order.payment_method %></th>
        </tr>

        <tr><h4>お届け先</h4>
            <th>〒 <%= @order.postal_code %> <%= @order.address %><br>
            <%= @order.name %>
            </th>
        </tr>
    </table>

<%= form_with model:@order, url:public_orders_path, method: :post, local:true do |f| %>
<%= f.hidden_field :payment_method, :value =>@order.payment_method %>
<%= f.hidden_field :address, :value =>@order.address %>
<%= f.hidden_field :postal_code, :value =>@order.postal_code %>
<%= f.hidden_field :name, :value =>@order.name %>
<%= f.hidden_field :total_payment, :value =>@sum %>
<%= f.submit '確定', class:"btn btn-success" %>
<% end %>