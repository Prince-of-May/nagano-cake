<h4>注文情報入力</h4>

<%= form_with model:@order, url:public_orders_confirm_path, local:true do |f| %>
<h5>支払方法</h5>
<%= f.radio_button :payment_method, :クレジットカード, checked: "checked"%>クレジットカード<br>
<%= f.radio_button :payment_method, :銀行振込 %>銀行振込
<h5>お届け先</h5>
<%= f.radio_button :address, :ご自身の住所, checked: "checked"%>ご自身の住所<br>
<%= current_customer.postal_code %><%= current_customer.address %><%= current_customer.family_name %><%= current_customer.first_name %><br>
<%= f.radio_button :address, :登録済住所から選択 %>登録済住所から選択<br>
<%#= f.select :address, [current_customer.address.all], selected: current_customer.address %>

<%= f.radio_button :address, :新しいお届け先 %>新しいお届け先<br>
<h6>郵便番号(ハイフンなし)
<%= f.text_field :postal_code %>
</h6><br>
<h6>住所
<%= f.text_field :address %>
</h6><br>
<h6>宛名
<%= f.text_field :name %>
<br></h6>

<%= f.submit '確認画面へ進む', class: "btn btn-primary" %>
<% end %>